<div class="panel panel-default">
    <div class="panel-heading">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <!--nameをクリックするとユーザーのページへリンク-->
            <span class="label label-info"><a href="#"><%= message.name %></a></span>
            <br>
            <%= message.body %>
            <br>
            <hr>
        <% end %>
    </div>
</div>

<%= form_for @message, html: {class: 'form-horizontal'} do |f| %>
    <div class="form_group">
        <label class="col-sm-2 control-label">名前:</label>
        <%= f.text_field :name, html: { class: "col-sm-10 control=label"} %>
    </div>
    <br>
    <div class="form_group">
        <label class="col-sm-2 control-label">内容:</label>
        <%= f.text_area :body, html: { class: "col-sm-10 control=label"} %>
    </div>
    <div class="form_group">
        <%= f.submit "投稿", class: "btn btn-sm btn-primary" %>
    </div>
<% end %>
