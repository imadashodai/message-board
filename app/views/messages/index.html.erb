<div class="panel panel-default">
    <div class="panel-heading">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <!--nameをクリックするとユーザーのページへリンク-->
            <span class="label label-info"><a href="#"><%= message.name %></a></span>
            <br>
            <%= message.body %>
            <br>
            <hr>
        <% end %>
    </div>
</div>

<%= form_for @message, html: {class: 'form-horizontal'} do |f| %>
            <div class="form_group">
                <label for="inputname" class="col-ms-2 control-label">名前:</label>
                <%= f.text_field :name, id: "inputname", class: "col-ms-10 form-fontrol" %>
            </div>
            <br>
            <div class="form_group">
                <label for="inputmain" class="col-ms-2 control-label">内容:</label>
                <%= f.text_area :body, id: "inputmain", class: "col-ms-10 form-control", size: "10x10" %>
            </div>
            <div class="form_group">
                <div class="col-sm-11 col-xs-10"></div>
                <%= f.submit "投稿", class: "col-sm-1 col-xs-2 btn btn-sm btn-primary" %>
            </div>
<% end %>
